<div class="main-content">
  <% if @posts.size > 0 %>
  <section id="posts" class="group">
    <h1 class="group-title">Recent posts:</h1>
    <% @posts.each do |post| %>
      <div class="post group-item">
        <h2><%= link_to post.title, post %></h2>
        <div><%= teaser(post.content) %></div>
      </div>
    <% end %>
  </section>
  <% end %>
</div>

<div class="sidebar">
  <%= render "shared/topics_small_list" %>
  <%= render "shared/neighborhoods_small_list" %>
</div>